<!DOCTYPE html>
<head>
    <link href="/css/global.css" rel="stylesheet">
    <link href="/css/login.css" rel="stylesheet">
    <meta charset="UTF-8">
    <title>Cadastro</title>
</head>
<body>
    <div id="main">
        <div id="aside">
            <img src="/assets/logo.png" alt="">
        </div>
        <div id="form">
            <div id="title">
                <p>Cadastro</p>
                <a href="/login">Já tenho uma conta</a>
            </div>
            <form method="POST" action="/register" style="max-height: 400px;">
                <%if (typeof msg !== 'undefined' && msg !== '') { %>
                    <div id="warning"><%- msg %></div>
                <% } %>

                <div class="input-item">
                    <img src="/assets/login-user.svg" alt="">
                    <input type="text" name="user" placeholder="Nome de usuário"/>
                </div>
                <div class="input-item">
                    <img src="/assets/login-email.svg" alt="">
                    <input type="email" name="email" placeholder="E-mail"/>
                </div>
                <div class="input-item">
                    <img src="/assets/login-pass.svg" alt="">
                    <input type="password" name="pass" placeholder="Senha">
                </div>
                <div class="input-item">
                    <img src="/assets/login-pass.svg" alt="">
                    <input type="password" name="passConf" placeholder="Senha novamente"/>
                </div>

                <div class="input-item-checkbox">
                    <p>Sou desenvolvedor</p>
                    <input type="checkbox" name="dev" id="dev-cb">
                </div>

                <div id="submit-wrapper">
                    <input type="image" src="/assets/login-submit.svg" alt="Submit Form"/>
                </div>
            </form>
        </div>  
    </div>
</body>
</html>